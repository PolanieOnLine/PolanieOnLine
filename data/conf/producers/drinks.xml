<?xml version="1.0" encoding="UTF-8"?>

<producers xmlns="stendhal" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="stendhal ../producers.xsd">

	<!-- Valo (Ados) -->
	<producer npc="Valo" slot="valo_concoct_potion" type="drink">
		<welcome text="Pozdrawiam młodzieńcze. #Uleczę Cię i #pomogę Tobie."/>
		<item name="wielki eliksir" minutes="2">
			<resource name="money" amount="20"/>
			<resource name="serce olbrzyma"/>

			<activity type="concoct,zrób,sporządź"/>
		</item>
	</producer>

	<!-- Uncle Dag (Ados) -->
	<producer npc="Uncle Dag" slot="uncle_dag_brew_fierywater" type="drink">
		<welcome text="Cześć! Jestem Uncle Dag, gorzelnik! Jeżeli przyniesiesz mi #'trzcinę cukrową' i #polano to #wywarzę dla Ciebie #'ekstrakt litworowy'."/>
		<item name="ekstrakt litworowy" minutes="20">
			<resource name="trzcina cukrowa" amount="5"/>
			<resource name="polano"/>

			<activity type="brew,nawarz"/>
		</item>
	</producer>

	<!-- Pedro (Athor) -->
	<producer npc="Pedro" slot="barman_mix_pina" type="drink">
		<welcome text="Aloha!"/>
		<item name="napój z oliwką" minutes="2">
			<resource name="kokos"/>
			<resource name="ananas"/>

			<activity type="mix,wymieszaj,zrób"/>
		</item>
	</producer>

	<!-- babcia Graham (Kalavan) -->
	<producer npc="babcia Graham" slot="granny_brew_tea" type="drink">
		<welcome text="Cześć. W czymś mogłabym #pomóc?"/>
		<item name="filiżanka herbaty" minutes="3">
			<resource name="mleko"/>
			<resource name="miód"/>

			<activity type="brew,zaparz"/>
		</item>
	</producer>

	<!-- Aron (Gdańsk) -->
	<producer npc="Aron" slot="aron_concoct_potion" type="drink">
		<welcome text="Witaj poszukiwaczu, co Ciebie sprowadza do mojej TAJNEJ kryjówki? Chcesz być moim #'królikiem doświadczalnym'?"/>
		<item name="duży smoczy eliksir" minutes="2">
			<resource name="money" amount="80"/>
			<resource name="gigantyczny eliksir"/>
			<resource name="smocza krew" amount="3"/>

			<activity type="concoct,zrób,sporządź"/>
		</item>
	</producer>

	<!-- Ojciec Honorat (Kraków) -->
	<producer npc="Ojciec Honorat" slot="honorat_concoct_potion" type="drink">
		<welcome text="Pozdrawiam młodzieńcze. W czym mogę Tobie #'pomóc'?"/>
		<item name="duży eliksir" minutes="2">
			<resource name="money" amount="20"/>
			<resource name="truchło wampira"/>
			<resource name="sclaria" amount="2"/>

			<activity type="concoct,zrób,sporządź"/>
		</item>
	</producer>

	<!-- Zbyszko (Kraków) -->
	<producer npc="Zbyszko" slot="zbyszko_make_vine" type="drink">
		<welcome text="Witajże, co szukasz w mym domu? Potrzebujesz #pomocy?"/>
		<item name="napój z winogron" minutes="1">
			<resource name="kiść winogron" amount="2"/>

			<activity type="make,zrób"/>
		</item>
	</producer>

	<!-- Agrypin (Wieliczka) -->
	<producer npc="Agrypin" slot="agrypin_concoct_potion" type="drink">
		<welcome text="Witaj rycerzu, nie chciałbyś czasem wypróbować mojego nowego #'eliksiru'?"/>
		<item name="smoczy eliksir" minutes="1">
			<resource name="money" amount="60"/>
			<resource name="wielki eliksir"/>
			<resource name="smocza krew"/>

			<activity type="concoct,zrób,sporządź"/>
		</item>
	</producer>

	<!-- Nosiwoda Gerwazy (Zakopane) -->
	<producer npc="Nosiwoda Gerwazy" slot="nosiwoda_fill_buklak" type="drink">
		<welcome text="Witaj [name]! Jeżeli przyniesiesz mi #'pusty bukłak' to naleję do niego wody ze źródełka. Powiedz tylko #nalej."/>
		<item name="bukłak z wodą" minutes="1">
			<resource name="pusty bukłak"/>
			<resource name="money" amount="140"/>

			<activity type="fill,nalej"/>
		</item>
	</producer>

	<!-- Nosiwoda Witek (Zakopane) -->
	<producer npc="Nosiwoda Witek" slot="nosiwoda_fill_buteleczke" type="drink">
		<welcome text="Witaj [name]! Jeżeli przyniesiesz mi #buteleczkę to naleję Tobie do niej wody ze źródełka. Powiedz tylko #nalej."/>
		<item name="buteleczka wody" minutes="1">
			<resource name="buteleczka"/>
			<resource name="money" amount="70"/>

			<activity type="fill,nalej"/>
		</item>
	</producer>

	<!-- Nosiwoda Jakub (Zakopane) -->
	<producer npc="Nosiwoda Jakub" slot="nosiwoda_fill_buklak" type="drink">
		<welcome text="Witaj [name]! Jeżeli przyniesiesz mi #butelkę to naleję Tobie do niej wody ze źródełka. Powiedz tylko #nalej."/>
		<item name="butelka wodą" minutes="1">
			<resource name="butelka"/>
			<resource name="money" amount="100"/>

			<activity type="fill,nalej"/>
		</item>
	</producer>

</producers>
