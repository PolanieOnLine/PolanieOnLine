<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
	android:color="#22ffffff">

	<item>
		<layer-list>

			<item>
				<shape android:shape="rectangle">
					<corners android:radius="6dp" />
					<gradient
						android:angle="90"
						android:endColor="#5b3312"
						android:startColor="#4a2b0f" />
					<stroke
						android:width="2dp"
						android:color="#2a1608" />
				</shape>
			</item>

			<item android:insetLeft="3dp" android:insetTop="3dp" android:insetRight="3dp" android:insetBottom="3dp">
				<shape android:shape="rectangle">
					<corners android:radius="4dp" />
					<gradient
						android:angle="90"
						android:endColor="#a66a2b"
						android:startColor="#c07a31" />
					<stroke
						android:width="1.5dp"
						android:color="#eac08a" />
				</shape>
			</item>

		</layer-list>
	</item>

</ripple>
