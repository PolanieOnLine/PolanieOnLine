<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/content" android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="eu.polanieonline.client.MainActivity"
	tools:showIn="@layout/activity_main">

	<ImageView android:id="@+id/splash"
		android:layout_width="match_parent"
		android:layout_height="match_parent" android:scaleType="fitCenter"
		tools:src="@drawable/splash_portrait"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/clientList" android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent">
	</androidx.constraintlayout.widget.ConstraintLayout>

	<Toolbar android:id="@+id/menu_main"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="#66000000"
		android:padding="8dp" app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent">

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="end"
			android:orientation="vertical" android:padding="4dp"
			android:layout_marginEnd="12dp">

			<LinearLayout
				android:id="@+id/connectivity_status_container"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical" android:orientation="horizontal"
				android:paddingVertical="4dp" android:paddingHorizontal="6dp"
				android:layout_marginTop="4dp">

				<View android:id="@+id/connectivity_status_icon"
					android:layout_width="14dp" android:layout_height="14dp"
					android:layout_marginEnd="8dp"
					android:background="@drawable/status_badge" />

				<TextView android:id="@+id/connectivity_status_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="@android:style/TextAppearance.Material.Medium"
					android:textColor="#fdf8e3"
					android:text="@string/connectivity_status_connecting" />

			</LinearLayout>

			<Button android:id="@+id/btn_connect"
				android:layout_width="134dp" android:layout_height="32dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/btn_wood"
				android:paddingHorizontal="12dp" android:paddingVertical="6dp"
				android:text="Połącz" android:textColor="#fdf8e3"
				android:textStyle="bold" android:textAllCaps="false" />

			<Button android:id="@+id/btn_title"
				android:layout_width="134dp" android:layout_height="32dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/btn_wood"
				android:paddingHorizontal="12dp" android:paddingVertical="6dp"
				android:text="Ekran tytułowy" android:textColor="#fdf8e3"
				android:textStyle="bold" android:textAllCaps="false" />

			<Button android:id="@+id/btn_reload"
				android:layout_width="134dp" android:layout_height="32dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/btn_wood"
				android:paddingHorizontal="12dp" android:paddingVertical="6dp"
				android:text="Odśwież" android:textColor="#fdf8e3"
				android:textStyle="bold" android:textAllCaps="false" />

			<Button android:id="@+id/btn_settings"
				android:layout_width="134dp" android:layout_height="32dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/btn_wood"
				android:paddingHorizontal="12dp" android:paddingVertical="6dp"
				android:text="Ustawienia" android:textColor="#fdf8e3"
				android:textStyle="bold" android:textAllCaps="false" />

			<Button android:id="@+id/btn_quit"
				android:layout_width="134dp" android:layout_height="32dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/btn_wood"
				android:paddingHorizontal="12dp" android:paddingVertical="6dp"
				android:text="Wyjście" android:textColor="#fdf8e3"
				android:textStyle="bold" android:textAllCaps="false" />

		</LinearLayout>

	</Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>
